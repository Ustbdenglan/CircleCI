<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20px"
    tools:context="com.sineva.rosapidemo.activity.GuideSettingActivity">

    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center"
        app:titleText="@string/guide_scene_setting"></com.sineva.rosapidemo.view.ToolbarControl>
    <!-- 分割线 -->
    <View style="@style/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="270px"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:background="@drawable/bg_layout_shape"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_guide_list"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="match_parent">

            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginBottom="60px"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_add_guide"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/icon_add" />

                <ImageView
                    android:id="@+id/btn_del_guide"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/icon_del" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:layout_weight="3"
            android:background="@drawable/bg_layout_shape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/scene_name"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/et_scene"
                            android:layout_width="180px"
                            android:layout_height="60px"
                            android:background="@drawable/edit_shape"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/interval_time"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/et_space_time"
                            android:layout_width="130px"
                            android:layout_height="60px"
                            android:background="@drawable/edit_shape"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="52px"
                            android:layout_height="70px"
                            android:gravity="center"
                            android:text="秒"
                            android:textSize="36px" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_default_scene"
                        style="@style/style_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center"
                        android:text="@string/default_scene"
                        android:textSize="36px" />

                    <CheckBox
                        android:id="@+id/cb_can_charge"
                        style="@style/style_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center"
                        android:text="@string/intelligent_charging"
                        android:textSize="36px" />

                    <CheckBox
                        android:id="@+id/cb_can_aq"
                        style="@style/style_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center"
                        android:text="@string/can_be_asked"
                        android:textSize="36px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/begin_time"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/et_begin_time"
                            android:layout_width="180px"
                            android:layout_height="60px"
                            android:background="@drawable/edit_shape"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/loop_time"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/et_cycle_times"
                            android:layout_width="130px"
                            android:layout_height="60px"
                            android:background="@drawable/edit_shape"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="52px"
                            android:layout_height="70px"
                            android:gravity="center"
                            android:text="次"
                            android:textSize="36px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="41px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/trigger_word"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/et_trigger_word"
                            android:layout_width="180px"
                            android:layout_height="60px"
                            android:background="@drawable/edit_shape" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="41px"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/select_map"
                            android:textSize="36px" />

                        <EditText
                            android:id="@+id/sp_select_map"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_shape"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="36px" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="136px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:layout_marginTop="31px"
                        android:text="@string/preview"
                        android:textSize="36px" />
                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/bg_line"
                android:layout_marginTop="52px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px">

                        <ImageView
                            android:id="@+id/img_question"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="30px"
                            android:clickable="true"
                            android:src="@drawable/icon_question" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/question_setting"
                            android:textSize="36px" />

                        <ImageView
                            android:id="@+id/img_add_explanation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="30px"
                            android:clickable="true"
                            android:src="@drawable/icon_add_img" />

                    </RelativeLayout>

                    <ListView
                        android:id="@+id/lv_guide_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="110px"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_cancle"
                            android:layout_width="160px"
                            android:layout_height="86px"
                            android:layout_marginRight="150px"
                            android:gravity="center"
                            android:text="@string/cancle"
                            android:textSize="36px" />

                        <Button
                            android:id="@+id/btn_confirm"
                            android:layout_width="160px"
                            android:layout_height="86px"
                            android:gravity="center"
                            android:text="@string/confirm"
                            android:textSize="36px" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/bg_line" />

</LinearLayout>
