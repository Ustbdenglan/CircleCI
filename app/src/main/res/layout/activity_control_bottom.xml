<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_nodes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20px"
    android:orientation="vertical">

    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center"
        app:titleText="@string/bottom_control" />

    <View
        style="@style/bg_line"
        android:layout_marginBottom="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63px">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/move_speed"
            android:textColor="#000"
            android:textSize="48px" />

        <SeekBar
            android:id="@+id/sb_move_speed"
            style="@style/jrt_seekbar_style"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:maxHeight="3px"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43px">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rotate_speed"
            android:textColor="#000"
            android:textSize="48px" />

        <SeekBar
            android:id="@+id/sb_rotate_speed"
            style="@style/jrt_seekbar_style"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:maxHeight="3px"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_forward"
            style="@style/img_btn_160px"
            android:layout_marginLeft="460px"
            android:layout_marginTop="154px"
            android:background="@drawable/up_button_selector" />



        <ImageButton
            android:id="@+id/btn_left"
            style="@style/img_btn_160px"
            android:layout_marginTop="200px"
            android:layout_marginLeft="92px"
            android:background="@drawable/left_button_selector" />

        <ImageButton
            android:id="@+id/btn_right"
            style="@style/img_btn_160px"
            android:layout_marginLeft="849px"
            android:layout_marginTop="-160px"
            android:background="@drawable/right_button_selector" />

        <ImageButton
            android:id="@+id/btn_backward"
            style="@style/img_btn_160px"
            android:layout_marginLeft="463px"
            android:layout_marginTop="200px"
            android:background="@drawable/down_button_selector" />
    </LinearLayout>

</LinearLayout>
