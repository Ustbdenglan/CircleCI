<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20px"
    android:orientation="vertical"
    tools:context=".activity.MapActivity">

    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center"
        app:titleText="@string/initial_point_setting"></com.sineva.rosapidemo.view.ToolbarControl>

    <View
        style="@style/bg_line"
        android:layout_marginBottom="20px" />


    <Button
        android:id="@+id/btn_set_initial_point"
        android:layout_width="230px"
        android:layout_height="70px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="40px"
        android:text="@string/initial_point"
        android:textSize="38px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="250px"
        android:layout_marginRight="80px"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="750px"
            android:layout_height="1250px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="50px"
            android:scaleType="fitXY"
            android:src="@drawable/robot_bg4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80px"
            >

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="180px"
                android:layout_height="80px"
                android:text="@string/cancle"
                android:layout_marginRight="150px"
                android:textSize="45px" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="180px"
                android:layout_height="80px"
                android:text="@string/confirm"
                android:textSize="45px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
