<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20px"
    tools:context="com.sineva.rosapidemo.activity.HandleActivity">

    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center"
        app:titleText="@string/handle"></com.sineva.rosapidemo.view.ToolbarControl>

    <View
        android:id="@+id/line"
        style="@style/bg_line"
        android:layout_below="@+id/toorbar" />

    <LinearLayout
        android:id="@+id/nine_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="60px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_begin_guide"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_guide" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/begin_guide"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_begin_guest"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_guest" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/begin_guest"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_self_recharge"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_charge" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/self_charge" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="100px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_lidar"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_lidar" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/lidar"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_head_control"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:src="@drawable/icon_head" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/head_control"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_bottom_control"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_bottom" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/bottom_control"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="100px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_voice_reset"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_wake_up" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/voice_reset"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_map_display"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_map" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/map_display"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_shutdown"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    style="@style/img_btn_160px"
                    android:src="@drawable/icon_shutdown" />

                <TextView
                    style="@style/handle_textSize"
                    android:text="@string/shutdown"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_devmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="240px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/lin_single_control"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/img_btn_160px"
                android:src="@drawable/icon_single_point" />

            <TextView
                style="@style/handle_textSize"
                android:text="@string/single_control"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_led_test"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_led_color_test"
                style="@style/img_btn_160px"
                android:src="@drawable/icon_led" />

            <TextView
                android:id="@+id/tv_led_color_test"
                style="@style/handle_textSize"
                android:text="@string/led_test" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_target_check"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/img_btn_160px"
                android:src="@drawable/icon_target" />

            <TextView
                style="@style/handle_textSize"
                android:text="@string/target_check" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>