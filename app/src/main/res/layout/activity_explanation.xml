<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20px"
    tools:context="com.sineva.rosapidemo.activity.GuideSettingActivity">

    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:gravity="center"
        app:titleText="@string/question_setting"></com.sineva.rosapidemo.view.ToolbarControl>
    <!-- 分割线 -->
    <View
        style="@style/bg_line"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_sence_list"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="@drawable/bg_layout_shape">

        </ListView>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="4.2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg_layout_shape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textColor="#000"
                    android:textSize="36px" />

                <EditText
                    android:id="@+id/et_scene"
                    android:layout_width="580px"
                    android:layout_height="60px"
                    android:layout_marginRight="40px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/edit_shape"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="@string/sports_play_word"
                android:textColor="#000"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_sport_word"
                android:layout_width="590px"
                android:layout_height="260px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="180px"
                android:background="@drawable/edit_shape"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minLines="6" />

            <Button
                android:id="@+id/btn_sport_play"
                android:layout_width="90px"
                android:layout_height="62px"
                android:layout_gravity="right"
                android:layout_margin="20px"
                android:text="@string/audition"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:gravity="left"
                    android:text="@string/sports_files"
                    android:textColor="#000"
                    android:textSize="36px" />

                <Button
                    android:id="@+id/btn_move_photo"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/image"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_move_music"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/music"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_move_video"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/video"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_move_play"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/preview"
                    android:textSize="30px" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="@string/target_point_word"
                android:textColor="#000"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_target_word"
                android:layout_width="580px"
                android:layout_height="240px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="180px"
                android:layout_marginRight="20px"
                android:background="@drawable/edit_shape"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minLines="6" />

            <Button
                android:id="@+id/btn_point_play"
                android:layout_width="90px"
                android:layout_height="62px"
                android:layout_gravity="right"
                android:layout_margin="20px"
                android:text="@string/audition"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:gravity="left"
                    android:text="@string/target_point_files"
                    android:textColor="#000"
                    android:textSize="36px" />

                <Button
                    android:id="@+id/btn_target_photo"
                    style="@style/btn_option"

                    android:layout_margin="20px"
                    android:text="@string/image"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_target_music"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/music"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_target_video"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/video"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_target_play"
                    style="@style/btn_option"
                    android:layout_margin="20px"
                    android:text="@string/preview"
                    android:textSize="30px" />
            </LinearLayout>
            <!-- <LinearLayout
                 android:orientation="vertical"
                 android:layout_margin="20px"
                 android:layout_weight="4"
                 android:layout_width="0px"
                 android:layout_height="match_parent">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/points"
                    android:textColor="#000"
                    android:textSize="36px" />

                <EditText
                    android:id="@+id/sp_path_point"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_shape"
                    android:text="1"
                    android:textSize="36px" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/moving_head_angle"
                    android:textColor="#000"
                    android:textSize="36px" />

                <EditText
                    android:id="@+id/sp_move_head_angle"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_shape"
                    android:text="2"
                    android:textSize="36px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="bottom"
                android:layout_margin="20px"
                android:layout_marginBottom="50px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_width="160px"
                    android:layout_height="84px"
                    android:layout_marginLeft="170px"
                    android:gravity="center"
                    android:text="@string/cancle"
                    android:textSize="36px" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="160px"
                    android:layout_height="84px"
                    android:layout_marginLeft="180px"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textSize="36px" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
